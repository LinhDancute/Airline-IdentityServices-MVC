@using Airline.WebClient.Models.Airline
@model TicketClass

@{
    ViewData["Title"] = "Xóa hạng vé";
}

<h1>@ViewData["Title"]</h1>
<h3>Có chắc chắn xóa?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.TicketName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.TicketName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FareClass)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FareClass)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="TicketId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Danh sách hạng vé</a>
    </form>
</div>
